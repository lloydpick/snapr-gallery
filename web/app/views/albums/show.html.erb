<h2><%= @album.title %></h2>
<% for @photo in @album.photos -%>
    <% @image = Image.find_by_id(@photo.image_id) %>
    <%= link_to image_tag(@image.public_filename(:small)), { :controller => 'photos', :action => 'show', :permalink => @album.permalink, :photolink => @photo.permalink } %>
<% end -%>
